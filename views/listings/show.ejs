<% layout("/layouts/boilerplate") %>
<body>
 <div class="row mt-3">
     <div class="col-8 offset-2">
        <h3>Details</h3>
        </div>
    
    <div class="card col-6 offset-2">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text"><b><li><%= listing.title %></li></b><br>
        <li><%= listing.description %></li><br>
        <li>&#8377;<%= listing.price.toLocaleString("en-IN") %></li><br>
        <li><%= listing.location %></li><br>
         <li><%= listing.country %></li>
    </p>
  </div>
    </div>
    <a href="/listing/<%= listing._id %>/edit">Edit this listing</a>
    <br><br>
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button>Delete this listing</button>
    </form>
</div>
</body>